
@{
    ViewBag.Title = "ngon ngu Razor";
}

<h2>ngon ngu Razor</h2>
<h3>bien</h3>
@{
    var name = "thuylinh";
    int age = 45;
    DateTime dt = DateTime.Now;
}
<p>name:@name</p>
<p>tuoi:@age</p>
<p>Time:@dt</p>
<hr />
<h3>cau lenh if</h3>
@{
    if (age > 40)
    {
        <p>tuoi @age =>da gia</p>
    }
    else
    {
        <p>con tre</p>
    }
}
<hr />
<h3>loop:for,while,do...while,foreach....</h3>
@{
    int num = 10;
}
@for (int i = 0; i < num; i++)
{
    <li>@i=>@i*@i</li>
}
<h3>mang</h3>
@{
    string[] names = { "tran van thai", "nguyen thi mai" };
}
@foreach (var item in names)
{
    <p>@item</p>
}
<hr />
@foreach (var item in ViewBag.names )
{
    <p>@item</p>
}

